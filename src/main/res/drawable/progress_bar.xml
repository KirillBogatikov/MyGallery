<?xml version="1.0" encoding="utf-8"?>
<animated-rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%">

    <shape
        android:shape="ring"
        android:innerRadiusRatio="4"
        android:thicknessRatio="5"
        android:useLevel="false">

        <gradient
            android:type="sweep"
            android:useLevel="false"
            android:centerY="0.50"
            android:startColor="#00114172"
            android:centerColor="#88114172"
            android:endColor="#aa114172" />
    </shape>
</animated-rotate>
